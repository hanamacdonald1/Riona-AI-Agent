# Riona AI Agent Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ================================
# SERVER CONFIGURATION
# ================================
PORT=3000
NODE_ENV=development
SESSION_SECRET=your_super_secret_session_key_here

# ================================
# DATABASE CONFIGURATION
# ================================
MONGODB_URI=mongodb://localhost:27017/riona-ai-agent

# ================================
# INSTAGRAM CREDENTIALS
# ================================
IGusername=your_instagram_username
IGpassword=your_instagram_password

# ================================
# TWITTER/X CREDENTIALS
# ================================
Xusername=your_twitter_username
Xpassword=your_twitter_password

# Twitter API Keys (for API access)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# ================================
# AI SERVICE CONFIGURATION
# ================================
# Google Generative AI (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# OpenAI (if used)
OPENAI_API_KEY=your_openai_api_key

# ================================
# PROXY CONFIGURATION (Optional)
# ================================
# Use proxies for multiple accounts and rate limiting
PROXY_HOST=your_proxy_host
PROXY_PORT=your_proxy_port
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# ================================
# AUTOMATION SETTINGS
# ================================
# Delay between actions (milliseconds)
ACTION_DELAY=5000

# Max posts to interact with per session
MAX_POSTS_PER_SESSION=50

# Max comments per session
MAX_COMMENTS_PER_SESSION=20

# Max likes per session
MAX_LIKES_PER_SESSION=100

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ================================
# SECURITY SETTINGS
# ================================
# Enable/disable certain features
ENABLE_INSTAGRAM=true
ENABLE_TWITTER=true
ENABLE_GITHUB=false

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# CHARACTER TRAINING
# ================================
# Default character file to use
DEFAULT_CHARACTER=ArcanEdge.System.Agent

# Training data storage path
TRAINING_DATA_PATH=./data/training